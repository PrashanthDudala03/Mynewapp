@page
@model Mynewapp.Pages.Items.DetailsModel
@{
    ViewData["Title"] = "Item Details";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Items/Index">Items</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Details</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Item Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Item.ID</dd>
                        
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Item.Name</dd>
                        
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Item.Description</dd>
                        
                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.Item.CreatedDate.ToString("g")</dd>
                        
                        <dt class="col-sm-3">Last Modified</dt>
                        <dd class="col-sm-9">@Model.Item.LastModified.ToString("g")</dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Item.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Created By</dt>
                        <dd class="col-sm-9">@Model.Item.CreatedBy</dd>
                    </dl>
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col">
                    <a asp-page="./Edit" asp-route-id="@Model.Item.ID" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
