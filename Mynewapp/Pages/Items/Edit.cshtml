@page
@model Mynewapp.Pages.Items.EditModel
@{
    ViewData["Title"] = "Edit Item";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Items/Index">Items</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Item</h4>
        </div>
        <div class="card-body">
            <form method="post" id="editForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Item.ID" />
                <input type="hidden" asp-for="Item.CreatedDate" />
                <input type="hidden" asp-for="Item.CreatedBy" />
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Item.Name" class="form-control" placeholder="Name" />
                            <label asp-for="Item.Name"></label>
                            <span asp-validation-for="Item.Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-8">
                        <div class="form-floating mb-3">
                            <textarea asp-for="Item.Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                            <label asp-for="Item.Description"></label>
                            <span asp-validation-for="Item.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="Item.IsActive">
                            <label class="form-check-label" asp-for="Item.IsActive">Active</label>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Save
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Client-side validation enhancements
        .ready(function() {
            #editForm.on('submit', function() {
                if (.valid()) {
                    // Add loading state to submit button
                    .find('button[type="submit"]').html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving...');
                    .find('button[type="submit"]').prop('disabled', true);
                }
            });
        });
    </script>
}
